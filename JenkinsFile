pipeline {
    agent any

    stages {
        stage('Clone Repository') {
                checkout scm
        }

        stage('Install Dependencies') {
            steps {
                script {
                    sh 'npm i'
                }
            }
        }

        stage('Start Application') {
            steps {
                script {
                    sh 'pm2 stop all'
                    sh 'pm2 restart 1'
                }
            }
        }
    }
}
