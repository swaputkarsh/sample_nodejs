pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            when {
                expression { BRANCH_NAME == 'testing' }
            }
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            when {
                expression { BRANCH_NAME == 'testing' }
            }
            steps {
                script {
                    sh 'npm i'
                }
            }
        }

        stage('Start Application') {
            when {
                expression { BRANCH_NAME == 'testing' }
            }
            steps {
                script {
                    sh 'pm2 stop all'
                    sh 'pm2 restart 1'
                }
            }
        }
    }
}
